<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="total.control.remote"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:name=".TCRCService"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="total.control.remote.MainActivity" />
        </activity>
        <activity
            android:name=".ConnectToPairedActivity"
            android:label="@string/title_activity_connect_to_paired" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="total.control.remote.SettingsActivity" />
        </activity>
    </application>

</manifest>